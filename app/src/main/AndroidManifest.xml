<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin yang diperlukan aplikasi -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Konfigurasi aplikasi -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/iconnn"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconnn"
        android:supportsRtl="true"
        android:theme="@style/Theme.CafeApp"
        tools:targetApi="31">

        <!-- Aktivitas dalam aplikasi -->
        <activity android:name=".AdminMenu.ListDataMenu" android:exported="false" />
        <activity android:name=".Profile.TentangAplikasiActivity" android:exported="false" />
        <activity android:name=".Profile.TentangKitaActivity" android:exported="false" />
        <activity android:name=".Profile.BantuanActivity" android:exported="false" />
        <activity android:name=".MenuDetail.MenuDetailActivity" android:exported="false" />
        <activity android:name=".Home.MainActivity" android:exported="false" />
        <activity android:name=".UserActivity" android:exported="false" />
        <activity android:name=".Login.Login_page" android:exported="true" />
        <activity android:name=".AdminMenu.TambahMenu" android:exported="false" />

        <!-- Entry point aplikasi -->
        <activity
            android:name=".Login.welcome_logo_page"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
