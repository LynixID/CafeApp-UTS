<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Warna shadow (hitam dengan transparansi) -->
            <corners android:radius="20dp"/> <!-- Corner radius -->
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp"/> <!-- Padding untuk menempatkan shadow -->
        </shape>
    </item>

    <!-- Background -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Warna background -->
            <corners android:radius="16dp"/> <!-- Corner radius yang sama -->
        </shape>
    </item>

</layer-list>
