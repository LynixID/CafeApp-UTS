<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/grid"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="profile"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GRID Cafe's"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_bg"
            android:padding="8dp">

            <!-- SearchView -->
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:queryHint="Search"
                android:iconifiedByDefault="false"
                android:background="@android:color/transparent" />

            <!-- Filter Icon -->
            <ImageView
                android:id="@+id/filterIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_filter_list_24"
                android:contentDescription="Filter" />
        </LinearLayout>

        <!-- Categories -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Category Icons -->
                <ImageView
                    android:id="@+id/categoryBurger"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:src="@drawable/rice"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Category Burger" />

                <ImageView
                    android:id="@+id/categoryPasta"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:src="@drawable/drink"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Category Pasta" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Promotion Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="@drawable/bg"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Selamat menikmati di\nGRID CAFE"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/loudspeaker"
                android:contentDescription="promo" />
        </LinearLayout>

        <!-- Recommended Section -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recommended"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="See All"
                android:id="@+id/seeAll"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Recommended Items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendedRecyclerView"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            tools:listitem="@layout/item_recommended"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
