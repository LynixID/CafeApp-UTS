<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coklatmuda"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bgkopi"
                android:alpha="0.45"/>

            <!--            <TextView-->
            <!--                android:id="@+id/cafegrid"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:fontFamily="@font/boba"-->
            <!--                android:text="CAFE GRID"-->
            <!--                android:textColor="#000000"-->
            <!--                android:textSize="50dp" />-->
        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewlogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FCF2D9"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="20dp"
            android:layout_gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/grid"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="300dp"
                android:paddingHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Login"
                android:fontFamily="@font/tabbara"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/InputUsername"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="15dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="username"
                android:textColor="@color/black"
                tools:ignore="Autofill,TextFields" />

            <TextView
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/InputPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="24dp"
                android:padding="12dp"
                android:hint="Password"
                android:textSize="16sp"
                android:inputType="textPassword"
                android:textColor="@color/black"
                tools:ignore="Autofill,TextFields"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BtnSubmit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Submit"
                android:textColor="@color/white"
                android:backgroundTint="@color/coklat"
                app:cornerRadius="10dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/coffe"
        android:text="Since 2024"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardviewlogin" />


</androidx.constraintlayout.widget.ConstraintLayout>