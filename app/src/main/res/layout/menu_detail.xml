<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Tombol Back -->
    <ImageButton
        android:id="@+id/buttonBackDetail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/back_icon"
        android:contentDescription="Kembali ke halaman sebelumnya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitleDetail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="Detail Menu"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:layout_gravity="center_horizontal" />

    <!-- Gambar Produk -->
    <ImageView
        android:id="@+id/imageProduct"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBackDetail" />

    <!-- Nama Produk -->
    <TextView
        android:id="@+id/textProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProduct" />

    <!-- Harga Produk -->
    <TextView
        android:id="@+id/textProductPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textProductName" />

    <!-- Deskripsi Produk -->
    <TextView
        android:id="@+id/textProductDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textProductPrice" />

    <!-- Tombol Add to Cart -->
    <Button
        android:id="@+id/buttonAddToCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#396330"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonBuyNow"
        app:layout_constraintTop_toBottomOf="@+id/textProductDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="150dp" />

    <!-- Tombol Buy Now -->
    <Button
        android:id="@+id/buttonBuyNow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Beli Sekarang"
        android:layout_marginStart="8dp"
        android:backgroundTint="#396330"
        app:layout_constraintStart_toEndOf="@+id/buttonAddToCart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textProductDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="150dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
