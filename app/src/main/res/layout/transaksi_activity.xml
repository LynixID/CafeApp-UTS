<!-- activity_transaksi.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinnerMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pilih Menu" />

    <EditText
        android:id="@+id/editTextJumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Jumlah" />

    <Button
        android:id="@+id/buttonTransaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lakukan Transaksi" />

    <TextView
        android:id="@+id/textRiwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Riwayat Transaksi:"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/listViewRiwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
